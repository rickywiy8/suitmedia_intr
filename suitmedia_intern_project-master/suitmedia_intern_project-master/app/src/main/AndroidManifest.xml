<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.suitmedia_internship_project">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.suitmedia_internship_project">

        <!-- FirstScreenActivity sebagai halaman utama -->
        <activity
            android:name=".FirstScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.suitmedia_internship_project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SecondScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.suitmedia_internship_project" />

        <activity
            android:name=".ThirdScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.suitmedia_internship_project" />
    </application>

</manifest>